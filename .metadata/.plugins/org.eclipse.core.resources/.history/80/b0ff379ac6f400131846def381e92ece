public class Logger {
	private int mLogLevel;

	public Logger(int aLogLevel) {
		mLogLevel = aLogLevel;
	}

	public Logger() {
		this(3);
	}
	public Logger(Logger copyFrom) {
		this(copyFrom.getLevel());
	}
	
	public int getLevel() {
		return mLogLevel;
	}
	public void setLevel(int aLogLevel) {
		if (aLogLevel >= 1 && aLogLevel <= 6)
			mLogLevel = aLogLevel;
	}
	public void log(int aLogLevel, String aMessage) {
		if (aLogLevel > mLogLevel)
			return;
		
	}

	public void log(String aMessage) {
		log(mLogLevel, aMessage);
	}
}
